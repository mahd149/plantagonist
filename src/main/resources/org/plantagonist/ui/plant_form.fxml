<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" hgap="8" vgap="8" fx:controller="org.plantagonist.ui.PlantFormController">
    <children>
        <Label text="Name" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Species" GridPane.rowIndex="1"/>
        <TextField fx:id="speciesField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Water every (days)" GridPane.rowIndex="2"/>
        <TextField fx:id="waterEveryField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Sunlight (hrs/day)" GridPane.rowIndex="3"/>
        <TextField fx:id="sunlightField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Photo path" GridPane.rowIndex="4"/>
        <TextField fx:id="photoField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <HBox spacing="8" GridPane.rowIndex="5" GridPane.columnSpan="2">
            <Button text="Save" onAction="#save"/>
            <Button text="Cancel" onAction="#cancel"/>
        </HBox>
    </children>
</GridPane>