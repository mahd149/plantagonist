<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16" styleClass="content-area" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.plantagonist.ui.SuppliesController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <Label styleClass="h1" text="Supplies Checklist" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#initialize" styleClass="nav-btn" text="Refresh" />
    </HBox>

    <!-- Add New Item Card -->
    <VBox spacing="10" styleClass="card">
        <Label styleClass="card-header" text="Add New Supply Item" />
        <HBox alignment="CENTER_LEFT" spacing="8">
            <TextField fx:id="itemField" promptText="Supply item" styleClass="text-field" HBox.hgrow="ALWAYS" />
            <TextField fx:id="qtyField" prefWidth="80" promptText="Qty" styleClass="text-field" />
            <TextField fx:id="thresholdField" prefWidth="100" promptText="Refill below" styleClass="text-field" />
            <Button onAction="#addSupply" styleClass="accent-btn" text="Add Item" />
        </HBox>
    </VBox>

    <!-- Supplies Table -->
    <VBox spacing="10" styleClass="card">
        <Label styleClass="card-header" text="Current Supplies" />
        <TableView fx:id="suppliesTable" styleClass="supplies-table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                <TableColumn fx:id="nameColumn" prefWidth="200" text="Supply Item" />
                <TableColumn fx:id="quantityColumn" prefWidth="80" text="Quantity" />
                <TableColumn fx:id="lastRestockedColumn" prefWidth="120" text="Last Restocked" />
                <TableColumn fx:id="actionsColumn" prefWidth="150" text="Actions" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Quick Links -->
    <HBox alignment="CENTER_LEFT" spacing="12" />
</VBox>
